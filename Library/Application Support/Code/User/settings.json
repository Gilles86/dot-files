{
    "explorer.openEditors.visible": 0,
    "workbench.editor.enablePreview": false,
    "workbench.editor.tabSizing": "shrink",
    "window.zoomLevel": -1,
    "editor.wordWrap": "on",
    "editor.fontSize": 15,
    "workbench.editor.showTabs": false,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;'\",.<>/?",
    "editor.lineNumbers": "on",
    "editor.renderLineHighlight": "none",
    "explorer.autoReveal": true,
    "editor.minimap.enabled": false,
    "editor.folding": false,
    "editor.glyphMargin": false,
    "git.decorations.enabled": false,
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.renderIndentGuides": false,
    },
    "editor.tabCompletion": "on",
    //"workbench.activityBar.visible": false,
    "editor.lineDecorationsWidth": 5,
    "editor.scrollbar.useShadows": false,
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.roundedSelection" : false,
    "editor.renderIndentGuides": false,
    "vim.enableNeovim": false,
    "vim.hlsearch": true,
    "vim.normalModeKeyBindings": [
        { "before": [ "w" ], "after": [ "<C-w>" ] },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": [ "w", "s" ], "commands": [":sp"] },
        { "before": [ "[", "o", "n" ], "commands": [":set number"] },
        { "before": [ "]", "o", "n" ], "commands": [":set number!"] },
        { "before": ["<esc>"], "commands": [":nohl"] },
        { "before": ["B"], "after": [ ],
            "commands": [ { "command": "editor.debug.action.toggleBreakpoint", "args": [] } ] },
        { "before": ["E"], "after": [ ],
            "commands": [ { "command": "workbench.action.quickOpen", "args": [] } ] },
        { "before": ["Q"], "after": [ ],
            "commands": [ { "command": "workbench.action.closeActiveEditor", "args": [] } ] },
        { "before": ["B"], "after": [ ],
            "commands": [ { "command": "editor.debug.action.toggleBreakpoint", "args": [] } ] },
        { "before": ["W"], "after": [ ],
            "commands": [ { "command": "workbench.action.files.save", "args": [] } ] },
        { "before": ["K"], "after": [ ],
            "commands": [ { "command": "editor.action.showHover", "args": [] } ] }
    ],

    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Default Light+"
}
