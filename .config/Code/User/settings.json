{
    "explorer.openEditors.visible": 0,
    "workbench.editor.enablePreview": false,
    "workbench.editor.tabSizing": "shrink",
    "window.zoomLevel": 0,
    "editor.wordWrap": "on",
    "editor.fontSize": 16,
    "workbench.editor.showTabs": false,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
    "editor.lineNumbers": "off",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.swp": true
    },
    "editor.renderLineHighlight": "none",
    "explorer.autoReveal": true,
    "editor.minimap.enabled": false,
    "editor.folding": true,
    "editor.glyphMargin": true,
    "git.decorations.enabled": false,
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.renderIndentGuides": false,
    },
    "editor.tabCompletion": "on",
    "keyboard.dispatch": "keyCode",
    //"workbench.activityBar.visible": false,
    "editor.lineDecorationsWidth": 3,
    "editor.scrollbar.useShadows": false,
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.roundedSelection" : false,
    "editor.renderIndentGuides": false,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
    "vim.iskeyword": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
    "vim.enableNeovim": false,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-f>": false,
        "<C-d>": false,
    },
    "vim.normalModeKeyBindings": [
        { "before": [ "w" ], "after": [ "<C-w>" ] },
        { "before": ["?"], "after": [ "v", "a", "w", "?" ] },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": ["?"], "commands": [{ "command": "workbench.action.findInFiles"}] },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["<esc>"], "commands": [":nohl"] },
        { "before": [ "w", "s" ], "commands": [":sp"] },
        { "before": [ "z",  "n" ], "commands": [":set number!"] },
        { "before": ["z", "i"], "commands": [{ "command": "workbench.action.zoomIn"}] },
        { "before": ["z", "o"], "commands": [{ "command": "workbench.action.zoomOut"}] },

        { "before": ["<leader>", "x"],
            "commands": [{ "command": "workbench.view.extensions"}] },
        { "before": ["<leader>", "e"],
            "commands": [{ "command": "workbench.view.explorer"}] },
        { "before": ["w", "c"],
            "commands": [{ "command": "workbench.action.closeEditorsAndGroup" }] },
        { "before": ["E"], "commands": [{ "command": "workbench.action.quickOpen" }] },
        { "before": ["Q"], "after": [ ],
            "commands": [ { "command": "workbench.action.closeEditorsAndGroup" } ] },
        { "before": ["B"], "after": [ ],
            "commands": [ { "command": "workbench.action.showAllSymbols" } ] },
        { "before": ["W"], "after": [ ],
            "commands": [ { "command": "workbench.action.files.save" } ] },
        { "before": ["K"], "after": [ ],
            "commands": [ { "command": "editor.action.showHover" } ] }
    ],

    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Default Light+",
    "extensions.ignoreRecommendations": false,
    "arduino.commandPath": "arduino",
    "C_Cpp.updateChannel": "Insiders",
    "arduino.path": "/home/amin/Documents/arduino-1.8.13",
    "cmake.configureOnOpen": false,
    "idf.showOnboardingOnInit": false,
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "jupyter.askForKernelRestart": false
}
